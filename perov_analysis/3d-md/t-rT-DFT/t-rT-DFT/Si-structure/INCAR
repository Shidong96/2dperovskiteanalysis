EDIFF=1.0E-07
EDIFFG=-0.02

ALGO=Normal

LREAL = Auto

#AMIN=0.01  # reduce mixing for improved convergence

LCHARG=.FALSE.   # do NO store charge density
LWAVE=.FALSE.     # store FWs
LVTOT=.FALSE.     # write LOCPOT file contains the total local potential (in eV)

ISPIN=1          # 1 non spin polarized calculations are performed

ISMEAR=0; SIGMA=0.01          # smearing for metals

#NCORE=8          # number of cores in parallel calc.
